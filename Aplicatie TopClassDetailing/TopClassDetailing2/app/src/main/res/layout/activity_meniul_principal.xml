<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/serviciii"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:isScrollContainer="false"
        android:text="Servicii"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:icon="@android:drawable/ic_menu_manage"
        app:iconTint="#FFC107"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <Button
        android:id="@+id/programare"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:text="Programare"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:icon="?android:attr/actionModeFindDrawable"
        app:iconTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />



    <Button
        android:id="@+id/contact"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:isScrollContainer="false"
        android:text="Informatii"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:icon="@android:drawable/ic_menu_call"
        app:iconTint="#FFC107"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537" />

    <Button
        android:id="@+id/GPS"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:isScrollContainer="false"
        android:text="Locatie GPS"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:icon="@android:drawable/ic_dialog_map"
        app:iconTint="#FFC107"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />



    <Button
        android:id="@+id/inpaoiinmeniulautentificareinregistrare"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_button"
        android:text="Inapoi  "
        android:textAllCaps="false"
        android:textColor="#000000"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <Button
        android:id="@+id/Setari"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:background="@drawable/custom_button"
        android:backgroundTintMode="multiply"
        android:checkable="false"
        android:clickable="true"
        android:isScrollContainer="true"
        android:keepScreenOn="true"

        android:textColorHint="#000000"
        app:iconSize="35dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="470dp"
        android:layout_height="784dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509"
        app:srcCompat="@drawable/untitled_1" />

</androidx.constraintlayout.widget.ConstraintLayout>